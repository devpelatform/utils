{
  "name": "@pelatform/utils",
  "version": "1.0.0",
  "description": "A library of utility functions that are used across for SaaS applications.",
  "author": "Pelatform Dev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup --clean --dts",
    "types:check": "tsc --noEmit"
  },
  "homepage": "https://devpelatform.github.io/utils",
  "files": [
    "dist/*",
    "README.md"
  ],
  "keywords": [
    "pelatform",
    "utils"
  ],
  "dependencies": {
    "@paralleldrive/cuid2": "^3.1.0",
    "@sindresorhus/slugify": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "chrono-node": "2.9.0",
    "clsx": "^2.1.1",
    "consola": "^3.4.2",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "nanoid": "^5.1.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
